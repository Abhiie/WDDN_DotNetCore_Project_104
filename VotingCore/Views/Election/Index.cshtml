@model IEnumerable<VotingCore.Models.Elections>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-6">
        <h2 class="text-info">Add Elections</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create">Add New Election</a>
    </div>
    <br />
    <div class="col-12">


        <table class="table table-striped border">
            <thead>
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndingDate)
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndingDate)
                        </td>
                        

                        <partial name="_TableBtnPartial" model="item.Id" />
                    </tr>
                }
            </tbody>
        </table>






    </div>
</div>
