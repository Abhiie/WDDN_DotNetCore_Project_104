@model VotingCore.Models.Candidate
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">


    <div class="row">
        <div class="col-md-4">

            <form method="post" action="Edit">
                <div class="">
                    <div class="form-group">
                        <label asp-for="CandidateName">

                        </label>
                    </div>
                    <div class="form-group">
                        <input asp-for="CandidateName" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label asp-for="CandidateNumber">

                        </label>
                    </div>
                    <div class="form-group">
                        <input asp-for="CandidateNumber" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label asp-for="CandidateEmailAddress">

                        </label>
                    </div>
                    <div class="form-group">
                        <input asp-for="CandidateEmailAddress" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label asp-for="Position">

                        </label>
                    </div>
                    <div class="form-group">
                        <input asp-for="Position" class="form-control" />

                    </div>


                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>

                </div>

            </form>
            </div>
</div>
</div>