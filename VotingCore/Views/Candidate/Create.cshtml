@model VotingCore.Models.Candidate
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="container">
 

    <div class="row">
        <div class="col-md-4">
            <form method="post" action="Create">
              
                    <div class="form-group">
                        <label asp-for="CandidateName">

                        </label>
                    </div>
                    <div class="form-group">
                        <input asp-for="CandidateName" class="form-control" />
                        <span asp-validation-for="CandidateName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CandidateNumber">

                        </label>
                    </div>
                    <div class="form-group">
                        <input asp-for="CandidateNumber" class="form-control" />
                        <span asp-validation-for="CandidateNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CandidateEmailAddress">

                        </label>
                    </div>
                    <div class="form-group">
                        <input asp-for="CandidateEmailAddress" class="form-control" />
                        <span asp-validation-for="CandidateEmailAddress" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Position">

                        </label>
                    </div>
                    <div class="form-group">
                        <input asp-for="Position" class="form-control" />

                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Create" />
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>

                

            </form>
        </div>
    </div>
    </div>